<script src="https://edit.tonyu.jp/js/runtime/detectUnsupported.js"></script><script language='text/tonyu' type='text/tonyu' data-filename='Etama.tonyu' data-lastupdate='1696681547379' >extends SpriteChar;
houkou=(rnd(3));
while(1) {
    
    $pat_base+17;
    if(houkou==0)y=y+8;
    if(houkou==1){y=y+4;x=x+4;}
    if(houkou==2){y=y+4;x=x-4;}
    if(y>$screenHeight)die();
    update();
}</script>

<script language='text/tonyu' type='text/tonyu' data-filename='Main.tonyu' data-lastupdate='1696682607652' >extends SpriteChar;
$score=0;
x=10000;
new Ziki{x=$screenWidth/2, y=400,p=$pat_sample+0};
new Teki{x=050, y=200,p=$pat_sample+3};
new Teki{x=100, y=150,p=$pat_sample+3};
new Teki{x=150, y=200,p=$pat_sample+3};
while(1) {
    new Label{x:$screenWidth-100,y:10,template:"スコア: $score"};
    new Label{x:$screenWidth-100,y:30,template:"HP: $hp"};
    if (($hp>0)&&(rnd(200)==0)){
   
        new Teki{x=rnd($screenWidth-20)+10,y=rnd(190)+10,p=$pat_sample+3};
    }
    if ($hp<1){
        new Label{x:$screenWidth/2,y:$screenHeight/2,template:"ゲームオーバー"};
        new Label{x:$screenWidth/2,y:$screenHeight/2+20,template:"Rを押して再開"};
        if(getkey("R")==1){
            $frontLayer.all(Label).die();
            new Ziki{x=$screenWidth/2, y=400,p=$pat_sample+0};
            new Teki{x=050, y=200,p=$pat_sample+3};
            new Teki{x=100, y=150,p=$pat_sample+3};
            new Teki{x=150, y=200,p=$pat_sample+3};
        }
    }
update();}

</script>

<script language='text/tonyu' type='text/tonyu' data-filename='Tama.tonyu' data-lastupdate='1696682821013' >extends SpriteChar;
while(1) {
    $pat_sample+1;
    y=y-8;	
    if(crashTo(Etama)){
        crashTo(Etama).die();
        $score=$score+1;
        die();
    }
    if(y<0)die();
    update();
}
</script>

<script language='text/tonyu' type='text/tonyu' data-filename='Teki.tonyu' data-lastupdate='1696682803129' >extends SpriteChar;
p=$pat_sample+3;
hp=3;
houkou=0;
while(1) {
    if (rnd(100)==0){
        houkou=0;
    }
    if (rnd(100)==0){
        houkou=1;
    }
    if (rnd(70)==0){
        new Etama{x=x, y=y,p=$pat_base+15};
    }
    if(crashTo(Tama)){
        crashTo(Tama).die();
        hp=hp-1;
    }
    if (hp<1){
        $score=$score+3;
        die();
    }
    if (x>$screenWidth-10)houkou=1;
    if (x<10)houkou=0;
    if (houkou<1)x=x+2;
    if (houkou>0)x=x-2;
update();}
</script>

<script language='text/tonyu' type='text/tonyu' data-filename='Ziki.tonyu' data-lastupdate='1696682719952' >extends SpriteChar;
p=$pat_sample+0;
$hp=5;
while(1) {
    if(getkey("space")==1){
        new Tama{x=x, y=y,p=$pat_sample+1};
    }
    if(crashTo(Etama)){
        crashTo(Etama).die();
        $hp=$hp-1;
    }
    if(crashTo(Teki)){
        crashTo(Teki).die();
        $hp=$hp-3;
    }
    if ($hp<1){
        $hp=0;
        all(Teki).die();
        die();
    }
    if (getkey(40)>0 && y<$screenWidth) y=y+3;
    if (getkey(39)>0 && x<$screenWidth) x=x+3;
    if (getkey(38)>0 && y>0) y=y-3; 
    if (getkey(37)>0 && x>0) x=x-3; 
update();}
</script>

